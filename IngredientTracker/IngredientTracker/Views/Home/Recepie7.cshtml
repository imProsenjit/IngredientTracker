<!-- recepie_area_start  -->
<div class="recepie_details_area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6 col-md-6">
                <div class="recepies_thumb">
                    <img src="/Content/img/recepie/recpie_7.png" alt="">
                </div>
            </div>
            <div class="col-xl-6 col-md-6">
                <div class="recepies_info">
                    <h3>French Onion Soup</h3>
                    <div class="resepies_details">
                        <ul class="unordered-list">
                            <li>4 tbsp. butter</li>
                            <li>3 large white onions</li>
                            <li>2 tbsp. all-purpose flour</li>
                            <li>1/2 c. white wine</li>
                            <li>2 c. low-sodium chicken stock</li>
                            <li>4 c. low-sodium beef stock</li>
                            <li>8 sprigs fresh thyme</li>
                            <li>8 baguette slices</li>
                            <li>1 c. grated Gruyère</li>
                        </ul>
                    </div>
                    <div class="form-group">
                        <label for="usr"><b>Enter No Of People:</b></label>
                        <input type="number" class="form-control" id="usr" name="username">
                        <a href="#" class="line_btn" style="margin-top: 10px; margin-left: 180px;">Submit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

