<div class="recepie_details_area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6 col-md-6">
                <div class="recepies_thumb">
                    <img src="/Content/img/recepie/recpie_9.png" alt="">
                </div>
            </div>
            <div class="col-xl-6 col-md-6">
                <div class="recepies_info">
                    <h3>Cheese Manicotti</h3>
                    <div class="resepies_details">
                        <ul class="unordered-list">
                            <li>1 (8-oz.) package manicotti</li>
                            <li>1 tbsp. extra-virgin olive oil</li>
                            <li>1/2 yellow onion</li>
                            <li>2 cloves garlic</li>
                            <li>2 tbsp. tomato paste</li>
                            <li>1 (28-oz.) can crushed tomatoes</li>
                            <li>2 1/2 c. ricotta cheese</li>
                            <li>1 c. shredded mozzarella</li>
                            <li>1/2 c. freshly grated Parmesan</li>
                            <li>1/4 c. freshly chopped basil</li>
                        </ul>
                    </div>
                    <div class="form-group">
                        <label for="usr"><b>Enter No Of People:</b></label>
                        <input type="number" class="form-control" id="usr" name="username">
                        <a href="#" class="line_btn" style="margin-top: 10px; margin-left: 180px;">Submit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
