    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text text-center">
                    <h3>Recipe Details</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /bradcam_area  -->
<!-- recepie_area_start  -->
<div class="recepie_details_area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6 col-md-6">
                <div class="recepies_thumb">
                    <img src="/Content/img/recepie/recpie_6.png" alt="">
                </div>
            </div>
            <div class="col-xl-6 col-md-6">
                <div class="recepies_info">
                    <h3>Beef Stroganoff</h3>
                    <div class="resepies_details">
                        <ul class="unordered-list">
                            <li>1 (12-oz.) package egg noodles</li>
                            <li>2 tbsp. butter</li>
                            <li>1 tbsp. vegetable oil</li>
                            <li>1 lb. sirloin</li>
                            <li>2 tbsp. extra-virgin olive oil</li>
                            <li>1 lb. baby Bella mushrooms</li>
                            <li>1/2 large onion</li>
                            <li>2 cloves garlic</li>
                            <li>2 tsp. fresh thyme leaves</li>
                            <li>1 tbsp. tomato paste</li>
                            <li>4 c. low-sodium beef</li>
                            <li>2 tsp. dijon mustard</li>
                            <li>1 tsp. Worcestershire sauce</li>
                            <li>2 tbsp. cornstarch</li>
                            <li>2 tbsp. sour cream</li>
                            <li>2 tbsp. freshly chopped parsley</li>
                        </ul>
                    </div>
                    <div class="form-group">
                        <label for="usr"><b>Enter No Of People:</b></label>
                        <input type="number" class="form-control" id="usr" name="username">
                        <a href="#" class="line_btn" style="margin-top: 10px; margin-left: 180px;">Submit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

